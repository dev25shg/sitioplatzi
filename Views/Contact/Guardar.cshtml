@model contacto
@{
    ViewData["Title"] = "Guardar";
    //Layout="~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
  <div class="card-header">
    Crear contacto
  </div>
  <div class="card-body">
   <form asp-action="Guardar" asp-controller="Contact" method="post">
  <div class="mb-3">
    <label for="nombre" class="form-label">Nombre</label>
    <input asp-for="Nombre" type="text" class="form-control" aria-describedby="emailHelp">    
  </div>
  <div class="mb-3">
    <label for="Telefono" class="form-label">Telefono</label>
    <input asp-for="Telefono" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label for="Correo" class="form-label">Correo</label>
    <input asp-for="Correo" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
  </div>
</div>